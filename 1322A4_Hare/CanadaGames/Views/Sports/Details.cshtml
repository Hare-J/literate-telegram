@model CanadaGames.Models.Sport

@{
    ViewData["Title"] = "Sport Details";
}

<h2>Sport Details: @Model.Name</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Code)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Athletes)
        </dt>
        <dd class="col-sm-10">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(modelItem => Model.Athletes.FirstOrDefault().FullName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(modelItem => Model.Athletes.FirstOrDefault().Age)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Athletes)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Age)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AthleteSports)
        </dt>
        <dd class="col-sm-10">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(modelItem => Model.AthleteSports.FirstOrDefault().Athlete.FullName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(modelItem => Model.AthleteSports.FirstOrDefault().Athlete.Age)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.AthleteSports)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Athlete.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Athlete.Age)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a href='@ViewData["returnURL"]'>Back to Sport List</a>
</div>
